<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zerodha_topcolor"
    tools:context=".AuctionFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image upload section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleauction"
            android:text="Auction"
            android:gravity="center"
            android:fontFamily="@font/poppins_light"
            android:background="@color/zerodha_background"
            android:textSize="28dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/text_upload_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zerodha_background"
            android:layout_below="@id/titleauction"
            android:elevation="4dp"
            android:padding="16dp"
            android:text="Upload Images"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <!-- Image upload buttons -->
        <LinearLayout
            android:id="@+id/layout_image_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/text_upload_images"
            android:padding="16dp">

            <Button
                android:id="@+id/button_upload_image1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Upload Image 1"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/button_upload_image2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Upload Image 2"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Product details section -->
        <TextView
            android:id="@+id/text_product_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Details"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:padding="16dp"
            android:layout_below="@id/layout_image_buttons"
            android:layout_marginTop="16dp"/>

        <!-- EditText for product name -->
        <EditText
            android:id="@+id/edit_text_product_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Product Name"
            android:textColor="@color/dark_gray"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:layout_below="@id/text_product_details"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"/>

        <!-- EditText for product description -->

        <!-- Document upload section -->
        <EditText
            android:id="@+id/edit_text_product_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/edit_text_product_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="16dp"
            android:maxLines="5"
            android:background="@drawable/edittext_background"
            android:hint="Product Description"
            android:padding="8dp"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/text_upload_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Documents"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:padding="16dp"
            android:layout_below="@id/edit_text_product_description"
            android:layout_marginTop="16dp"/>

        <!-- Document upload button -->
        <Button
            android:id="@+id/button_upload_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Document"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_below="@id/text_upload_document"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <!-- Bidding section -->
        <TextView
            android:id="@+id/text_bidding_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bidding Price"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:padding="16dp"
            android:layout_below="@id/button_upload_document"
            android:layout_marginTop="16dp"/>

        <!-- EditText for bidding price -->
        <EditText
            android:id="@+id/edit_text_bidding_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Bidding Price"
            android:textColor="@color/dark_gray"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:layout_below="@id/text_bidding_price"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/bottom_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp" />


    </RelativeLayout>
</ScrollView>

</FrameLayout>
